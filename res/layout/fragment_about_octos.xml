<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:octos="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

    <LinearLayout
            style="@style/settingsFragmentStyle">

        <com.android.settings.octos.widgets.DeveloperPreference
                octos:nameDev="Team-OctOS"
                octos:twitterHandle="teamoctos"
                octos:githubLink="@string/github_octos"
                octos:emailDev="teamoctos@gmail.com"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <com.android.settings.octos.settings.UrlSetting
                android:id="@+id/octos"
                android:title="@string/octos_website_title"
                android:summary="@string/octos_website_summary"
                octos:url="@string/url_octos"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <com.android.settings.octos.settings.UrlSetting
                android:id="@+id/octos_review"
                android:title="@string/octos_review_title"
                android:summary="@string/octos_review_summary"
                octos:url="@string/url_octos_gerrit"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <com.android.settings.octos.settings.UrlSetting
                android:id="@+id/octos_irc"
                android:title="@string/octos_irc_title"
                android:summary="@string/octos_irc_summary"
                octos:url="@string/url_octos_irc"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

        <com.android.settings.octos.settings.UrlSetting
                android:id="@+id/octos_mgerrit_changelog"
                android:title="@string/mgerrit_changelog_title"
                android:summary="@string/mgerrit_changelog_summary"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

    </LinearLayout>
</ScrollView>
